generator client {
  provider = "prisma-client-id"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Employee {
  id           Int      @id @default(autoincrement())
  name         String
  hourlyRate   Float    // שכר שעתי
  employerCost Float    // אחוז תוספת מעביד (למשל 1.25 עבור 25%)
  shifts       Shift[]
}

model Shift {
  id         Int      @id @default(autoincrement())
  date       DateTime
  hours      Float
  employeeId Int
  employee   Employee @relation(fields: [employeeId], references: [id])
}
